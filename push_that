#!bin/bash

echo "===Config==="
git config --global --add safe.directory $PWD
echo "===git Add==="
STATUS=($(git status -s))
COMMIT=""
SYM=("AM", "M", "MM")
for (( c=0; c<${#STATUS[@]}; c+=2 ))
do
    if [[ ${STATUS[$c]} = "??" || ${STATUS[$c]} == *"M"* ]]
    then
        git add ${STATUS[$c + 1]}
        if [[ ${STATUS[$c]} = "??" ]]
        then
            TMP="[ADD]"
        else
            TMP="[MOD]"
        fi
        COMMIT+=$TMP" "${STATUS[$c + 1]}", "
    fi
done
echo "===Commiting==="
git commit -m "$COMMIT"
echo "===Pushing==="
git push